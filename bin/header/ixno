#!/usr/bin/env bash

# ------------
# This script prints the rsm header
#
# @author    Björn Hempel <bjoern@hempel.li>
# @version   0.1.0 (2022-12-18)
# ------------

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
VERSION_PATH="$SCRIPT_DIR/../../VERSION"
VERSION=$(cat $VERSION_PATH)

HEADER1="PHPQualitySuite (PQS)"
HEADER2="Version: $VERSION"
HEADER3="Copyright (c) 2025 björn hempel <bjoern@hempel.li>"

START_COLOR='\e[48;2;98;114;164m\e[38;2;248;248;242m'
END_COLOR='\e[0m'

echo
printf "%b ┌───┐ ┌───┐ ┌───┐ ┌───┐ %b " "$START_COLOR" "$END_COLOR"
printf "$HEADER1"
echo
printf "%b │ I │ │ X │ │ N │ │ O │ %b " "$START_COLOR" "$END_COLOR"
printf "$HEADER2"
echo
printf "%b └───┘ └───┘ └───┘ └───┘ %b " "$START_COLOR" "$END_COLOR"
printf "$HEADER3"
echo
echo
echo
