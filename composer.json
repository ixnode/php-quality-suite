{
    "name": "ixnode/php-quality-suite",
    "description": "PHP Quality Suite - A zero-config PHP quality toolbox combining Rector, PHPStan, and PHPMD. Run static analysis and automated refactorings with simple commands.",
    "version": "0.1.20",
    "type": "library",
    "license": "MIT",
    "keywords": ["php", "quality", "static", "code", "analizis", "depricated", "rector"],
    "authors": [
        {
            "name": "Bj√∂rn Hempel",
            "email": "bjoern@hempel.li",
            "homepage": "https://www.hempel.li/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ixnode\\PhpQualitySuite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixnode\\PhpQualitySuite\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-yaml": "*",
        "adhocore/cli": "^v1.0.0",
        "rector/rector": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "bin": [
        "bin/php-quality-suite"
    ],
    "scripts": {
        "ixno:header": "bin/header/ixno",

        "rector": "bin/header/rector 'bin/php-quality-suite rector --include=src,tests --dry-run' 'Rector'",
        "phpunit": "bin/header/phpunit 'phpunit -d memory_limit=512M --configuration phpunit.xml' 'Unit'",

        ".test": [
            "@ixno:header",
            "@phpunit",
            "@rector"
        ],

        "test": [
            "composer .test && bin/header/success || bin/header/error"
        ]
    },
    "scripts-descriptions": {

    }
}
